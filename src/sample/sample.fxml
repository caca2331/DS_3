<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.shape.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="gridPane" alignment="center" hgap="0.0" vgap="0.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <AnchorPane fx:id="anchorPane" onMouseDragged="#mouse_drag" onMousePressed="#mouse_press" onMouseReleased="#mouse_release" GridPane.rowIndex="1">
         </AnchorPane>
      <MenuBar>
        <menus>
            <Menu mnemonicParsing="false" text="Minesweeper">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#quit" text="Quit" />
               </items>
            </Menu>
          <Menu mnemonicParsing="false" text="Game">
            <items>
                  <Menu mnemonicParsing="false" text="New Game">
                     <items>
                        <MenuItem mnemonicParsing="false" onAction="#newGameBeginner" text="Beginner" />
                        <MenuItem mnemonicParsing="false" onAction="#newGameIntermediate" text="Intermediate" />
                        <MenuItem mnemonicParsing="false" onAction="#newGameExpert" text="Expert" />
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem mnemonicParsing="false" onAction="#newGameCustom" text="Custom" />
                     </items>
                  </Menu>
                  <MenuItem mnemonicParsing="false" onAction="#board" text="Board" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
               <items>
              <MenuItem mnemonicParsing="false" onAction="#help" text="Help" />
              <MenuItem mnemonicParsing="false" onAction="#about" text="About" />
               </items>
          </Menu>
        </menus>
      </MenuBar>

   </children>
</GridPane>
